/* include HelperMethods from external PDF creation API to get Heroku Image path */
 <% environment.context_class.instance_eval { include PdfHelper } %>
  @import "../defaults/basic_vars";
  
  /* redefine basic green as on PDF generation it differs from screen design */
  $basic_green: #0E6451;
 
  body, h1, h2, h3, h4, h5, h6, p
  {
    @include base_font;
    color: #333;
    margin: 0;
  }

  p, .links {
    font-size: $deffont;
  }
  h1, h2, h3, h4, h5, h6 {
    @include signature_font;
  }
 
  div.simple
 {
     width: 220mm;
     height: 151px;
     margin: 10px 10px 10px 10px;
     -webkit-box-shadow: 0px 3px 9px #000;
     -moz-box-shadow: 0px 3px 9px #000;
     box-shadow: 0px 3px 9px #000;
     /* image paths won't be generated by Rails as PDF creator is Linux lib called outside Rails, so use wicked_pdf_css_image_tag to find asset path */
     background: url(<%= wicked_pdf_css_image_tag 'banner.jpg' %>) no-repeat right center;
     position: relative;
     border-left: 1px solid #888;
     border-right: 1px solid #888;
 }
 
 
