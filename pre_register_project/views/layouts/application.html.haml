!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "PROJECTURL"
      %meta{:content => content_for?(:description) ? yield(:description) : "PROJECTURL", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    .container
      %header.header
        %nav
          = render 'layouts/navigation'
      .jumbotron{:role => "main"}
        = render 'layouts/messages'
        = yield(:jumbo)
      .row.marketing
        = yield
      %footer
