.modal-dialog
	.modal-content
		= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :html => {:class => 'form-horizontal' } do |f|
			.modal-header
				%a.close{"data-dismiss" => "modal", "aria-hidden" => "true"} &#215;
				%h3= I18n.t "beta_stadium.home.headline_herounit"
			.modal-body
				= f.error_notification
				.form-inputs
					= f.input :email, :placeholder => I18n.t("beta_stadium.example_mail"), wrapper: :horizontal
					= f.input :opt_in, :label => false, :inline_label => I18n.t("beta_stadium.inform_news")
			.modal-footer
				= f.submit I18n.t('accountmenu.pre_register'), :class => "btn btn-primary", :id => 'invitation_button'
				%a.btn{"data-dismiss" => "modal", "aria-hidden" => "true"}= I18n.t "buttons.close_btn"